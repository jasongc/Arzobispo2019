    <script src="~/Scripts/JqueryFormValidate.js"></script>
    <link href="~/Content/Themes/FormValidatorTheme.css" rel="stylesheet" type="text/css" />
    <script>
        $.validate();
        $(document).ready(function () {
            var height = $(window).height();
            $(".contenedor-login").animate({
                    marginTop: (height / 2) - 320,
                    opacity: 1
                },
                500);

            //if (navigator.serviceWorker) {
            //    navigator.serviceWorker.register("../sw.js");
            //} 
        });
        $(window).resize(function () {
            var height = $(window).height();
            $(".contenedor-login").animate({
                marginTop: (height / 2) - 320,
                opacity: 1,
            },500)
        });
        function onHover() {
            if ($(".border").length == 0) {
                console.log("entro");
                $(".div-border").stop().toggleClass("border");
                $(".div-border").animate({
                    width: 130,
                }, 300)
            }
        }
    </script>
